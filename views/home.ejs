    <body>
        <!--navbar-->
        <%- include ('./partials/base.ejs') %>
        <!--form-->
        <div class="container">
            <h1 class="hi my-4">URL SHORTENER</h1>

            <form id="forme" class="my-4 form-inline">
                <input type="text" name="url" placeholder="Enter url to be shortened with it's protocol e.g. https://example.com" required class="form-control form-inline col mr-2">
                <button type="submit" name="fth" class="btn btn-primary my-2">Shorten</input>
            </form>
        </div>
        <div class="container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Url</th>
                        <th>Short Url</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (user) { %>
                        <% if (urls) { %>
                            <% urls.forEach(url => { %>
                                <tr>
                                    <td>
                                        <a target="_blank" rel="noreferrer noopener" id="longUrl" href="<%= url.longUrl %>"><%= url.longUrl %></a>
                                    </td>
                                    <td>
                                        <a target="_blank" rel="noreferrer noopener" id="shortUrl" href="<%= url.shortUrl %>"><%= url.shortUrl %></a>
                                    </td> 
                                    <!-- <td>
                                        <button class="btn btn-danger" id="delete" type="submit">Delete</button>
                                    </td> -->
                                </tr> 
                            <% }) %>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
    <script>
        const form = document.querySelector('form');
        const btn = document.querySelector('button');
        const del = document.getElementById('delete');
        form.fth.addEventListener('click', async (e) => {
            e.preventDefault();
            
            const url = form.url.value;
            await fetch('/short', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ url })
            }).then(async (res) => {
                    const data = await res.json();
                    if (data.notSigned) {
                        alert('You need to have an account to have your urls saved');
                        document.getElementById('rowe').innerHTML = ` 
                                        <td>
                                            <a target="_blank" rel="noreferrer noopener" href="${data.notSigned.longUrl}">${data.notSigned.longUrl}</a>
                                        </td>
                                        <td>
                                            <a target="_blank" rel="noreferrer noopener" href="${data.notSigned.longUrl}">${data.notSigned.shortUrl}</a>
                                        </td>`
                        form.reset();
                    }
                    if (data.message) {
                        window.location.href = '/'
                    }
                    if (data.error) {
                        alert(data.error)
                        form.reset();
                    }
            }).catch((error) => console.log(error) );
        })

