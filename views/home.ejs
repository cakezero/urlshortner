<!DOCTYPE html>
    <head>
        <title>Url Shortener</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <h1 class="my-4">URL SHORTENER</h1>

            <form class="my-4 form-inline">
                <input type="text" name="url" placeholder="Enter url to be shortened with it's protocol e.g. https://example.com" required class="form-control col mr-2">
                <button class="btn btn-primary my-2" onclick="vent()">Shorten</button>
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Url</th>
                        <th>Short Url</th>
                    </tr>
                </thead>
                <tbody>
                    <tr id="rowe">
                        <% if (user) { %>
                            <% if (urls) { %>
                                <% urls.forEach(url => { %>
                                    <td>
                                        <a target="_blank" rel="noreferrer noopener" href="<%= url.longUrl %>"><%= url.longUrl %></a>
                                    </td>
                                    <td>
                                        <a target="_blank" rel="noreferrer noopener" href="<%= url.shortUrl %>"><%= url.shortUrl %></a>
                                    </td>
                                <% }) %>
                            <% } %>
                        <% } %>
                    </tr>
                </tbody>
            </table>
        </div>
    </body>
    <script>

        async function vent() {
            const form = document.querySelector('form');
            const url = form.url.value;
            console.log(url)

            const res = await fetch('/short', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ url })
            });
            const data = await res.json();
            if (data.notSigned) {
                const tr = document.getElementById('rowe');
                tr.innerHTML = `
                    <td>
                        <a target="_blank" rel="noreferrer noopener" href="${data.notSigned.longUrl}">${data.notSigned.longUrl}</a>
                    </td>
                    <td>
                        <a target="_blank" rel="noreferrer noopener" href="${data.notSigned.longUrl}">${data.notSigned.shortUrl}</a>
                    </td>
                `
            }
            if (data.error) {
                alert(data.error);
            }
            if (data.message) {
                window.location.href = '/';
            }
        }
    </script>
</html>
