            </ul>
        </div>
        <!-- //main -->
    </body>

    <script>
        const form = document.querySelector('form');
        const btn = document.getElementById('btn');

        btn.addEventListener('click', async (e) => {
            e.preventDefault();
            const username = form.username.value;
            const email = form.email.value;
            const password = form.password.value;
            const password2 = form.password2.value;

            if (password !== password2) {
                return document.getElementById('password-error').innerHTML = 'Passwords are not correct';
            }

            await fetch('/user/register', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ username, email, password, password2 })
            }).then(async (res) => {
                const data = await res.json();
                console.log(data);
                if (data.error) {
                    document.getElementById('username-error').style.setProperty("--script-content", `${data.error.username}`);
                    document.getElementById('email-error').style.setProperty("--script-content", `${data.error.email}`);
                    document.getElementById('password-error').style.setProperty("--script-content", `${data.error.password}`);
                }
                if (data.message) {
                    window.location.href = '/'
                }
            }).catch((err) => window.location.href = '/user/register' )
        })
    </script>
</html>